<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>URL Shortener</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .container {
            max-width: 800px;
            margin: auto;
            padding-top: 20px;
        }
        .logo {
            text-align: center;
            margin-bottom: 20px;
        }
        .logo h1 {
            color: #073763;
        }
        h2 {
            color: #505a74;
        }
        .btn-success {
            background-color: #073763;
            border-color: #073763;
            font-weight: bold;
        }
        .btn-success:hover {
            background-color:#505a74 ;
            border-color: #505a74;
        }
        .table {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        .table th {
            background-color: #073763;
            color: #fff;
            border-color: black;
        }
        .table-striped tbody tr:nth-of-type(odd) {
            background-color: #f8f9fa;
        }
        .table td, .table th {
            vertical-align: middle;
        }
        .input-group {
            margin-top: 30px;
            margin-bottom: 30px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="logo">
            <h1>weeRoute</h1>
        </div>
        <h2 class="text-center my-4">URL SHORTENER</h2>
        <form action="/shortUrls" method="POST" class="mb-4">
            <div class="input-group">
                <input required placeholder="Enter URL" type="url" name="fullUrl" id="fullUrl" class="form-control">
                <button class="btn btn-success" type="submit">Shorten URL</button>
            </div>
        </form>

        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th style="width: 60%;">Full URL</th>
                        <th style="width: 30%;">Short URL</th>
                        <th style="width: 10%;">Clicks</th>
                    </tr>
                </thead>
                <tbody>
                    <% shortUrls.forEach(shortUrl => { %>
                        <tr>
                            <td><a href="<%= shortUrl.full %>" target="_blank"><%= shortUrl.full %></a></td>
                            <td><a href="<%= shortUrl.short %>" target="_blank"><%= shortUrl.short %></a></td>
                            <td><%= shortUrl.clicks %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
